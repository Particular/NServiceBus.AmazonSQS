<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.AmazonSQS.CommandLine</PackageId>
    <Description>.NET Core global tool to manage SQS, S3 and SNS entities for NServiceBus endpoints</Description>
    <ToolCommandName>sqs-transport</ToolCommandName>
    <PackAsTool>True</PackAsTool>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.6.0" />
    <PackageReference Include="AWSSDK.S3" Version="[3.3.18.5, 3.4)" />
    <PackageReference Include="AWSSDK.SQS" Version="[3.3.3.10, 3.4)" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" Version="[3.3.3.10, 3.4)" />
    <PackageReference Include="Particular.Packaging" Version="0.6.2" PrivateAssets="All" />
  </ItemGroup>

</Project>

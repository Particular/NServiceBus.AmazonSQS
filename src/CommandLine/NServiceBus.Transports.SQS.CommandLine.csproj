<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.AmazonSQS.CommandLine</PackageId>
    <Description>.NET Core global tool to manage SQS, S3 and SNS entities for NServiceBus endpoints</Description>
    <ToolCommandName>sqs-transport</ToolCommandName>
    <PackAsTool>True</PackAsTool>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.S3" Version="3.7.7.22" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" Version="3.7.3.24" />
    <PackageReference Include="AWSSDK.SQS" Version="3.7.2.21" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="4.0.1" />
    <PackageReference Include="Particular.Packaging" Version="1.4.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
